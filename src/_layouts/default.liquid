<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ page.layout }} {{ page.page_class }}">
    <div class="small sidebar-layout">
      <aside class="sidebar">
        <div class="header">
          <h1>Tailwind Sails</h1>
          <h2>Sails to expedite your TailwindCSS experience.</h2>
        </div>
        {% render "navigation", metadata: site.metadata, page: page %}
      </aside>
      <main class="p-4">
        {{ content }}
      </main>
    </div>
  </body>
</html>
